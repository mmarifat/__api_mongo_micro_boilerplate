{
    "name": "api-mongo-micro-boilerplate",
    "version": "1.0.0",
    "description": "",
    "author": {
        "name": "Md Minhaz Ahamed Rifat <mmarifat>",
        "email": "mma.rifat66@gmail.com",
        "url": "https://www.github.com/mmarifat"
    },
    "license": "MIT",
    "private": true,
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\" \"test/**/*.ts\"",
        "start:dev": "cross-env NODE_ENV=development nest build --webpack --webpackPath webpack-hmr.config.js --watch",
        "start:prod": "cross-env NODE_ENV=production nest start",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare": "husky install"
    },
    "dependencies": {
        "@liaoliaots/nestjs-redis": "^9.0.5",
        "@nestjs/common": "^9.3.9",
        "@nestjs/config": "^2.3.1",
        "@nestjs/core": "^9.3.9",
        "@nestjs/jwt": "^10.0.2",
        "@nestjs/microservices": "^9.3.9",
        "@nestjs/mongoose": "^9.2.1",
        "@nestjs/passport": "^9.0.3",
        "@nestjs/platform-express": "^9.3.9",
        "@nestjs/swagger": "^6.2.1",
        "@nestjs/terminus": "^9.2.1",
        "@nestjs/typeorm": "^9.0.1",
        "amqp-connection-manager": "^4.1.11",
        "amqplib": "^0.10.3",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cross-env": "^7.0.3",
        "hcaptcha": "^0.1.1",
        "husky": "^8.0.3",
        "ioredis": "^5.3.1",
        "joi": "^17.8.3",
        "mongoose": "^6.0.2",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.10.0",
        "redis": "^4.6.5",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^4.4.0",
        "rxjs": "^7.8.0",
        "swagger-ui-express": "^4.6.2",
        "typeorm": "^0.3.12",
        "yargs-parser": "^21.1.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.2.0",
        "@nestjs/schematics": "^9.0.4",
        "@nestjs/testing": "^9.3.9",
        "@types/bcryptjs": "^2.4.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.4.0",
        "@types/node": "18.15.1",
        "@types/passport-jwt": "^3.0.8",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "prettier": "^2.8.4",
        "run-script-webpack-plugin": "^0.1.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "tsconfig-paths": "^4.1.2",
        "typescript": "^4.9.5",
        "webpack": "^5.76.1",
        "webpack-node-externals": "^3.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
