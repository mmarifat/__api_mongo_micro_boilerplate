{
    "name": "api-mongo-micro-boilerplate",
    "version": "1.0.0",
    "description": "",
    "author": {
        "name": "Md Minhaz Ahamed Rifat <mmarifat>",
        "email": "mma.rifat66@gmail.com",
        "url": "https://www.github.com/mmarifat"
    },
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\" \"test/**/*.ts\"",
        "start:dev": "cross-env NODE_ENV=development nest start --watch",
        "start:prod": "cross-env NODE_ENV=production nest start",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare": "husky install"
    },
    "dependencies": {
        "@liaoliaots/nestjs-redis": "^9.0.4",
        "@nestjs/common": "^9.2.1",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.2.1",
        "@nestjs/jwt": "^9.0.0",
        "@nestjs/microservices": "^9.2.1",
        "@nestjs/mongoose": "^9.2.1",
        "@nestjs/passport": "^9.0.0",
        "@nestjs/platform-express": "^9.2.1",
        "@nestjs/swagger": "^6.1.4",
        "amqp-connection-manager": "^4.1.10",
        "amqplib": "^0.10.3",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cross-env": "^7.0.3",
        "hcaptcha": "^0.1.1",
        "ioredis": "^5.2.4",
        "joi": "^17.7.0",
        "mongoose": "^6.8.0",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.0",
        "redis": "^4.5.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.6.0",
        "swagger-ui-express": "^4.6.0",
        "yargs-parser": "^21.1.1",
        "husky": "^8.0.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.1.5",
        "@nestjs/schematics": "^9.0.3",
        "@nestjs/testing": "^9.2.1",
        "@types/bcryptjs": "^2.4.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.15",
        "@types/jest": "^29.2.4",
        "@types/node": "18.11.15",
        "@types/passport-jwt": "^3.0.8",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.3.1",
        "prettier": "^2.8.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.3",
        "ts-loader": "^9.4.2",
        "tsconfig-paths": "^4.1.1",
        "typescript": "^4.9.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
