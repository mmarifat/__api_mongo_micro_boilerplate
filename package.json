{
    "name": "nest-js-api-mongodb-boilerplate",
    "version": "0.0.1",
    "description": "",
    "author": {
        "name": "mmarifat",
        "email": "mma.rifat66@gmail.com",
        "url": "github.com/mmarifat"
    },
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "start:development": "cross-env NODE_ENV=development tsnd --respawn --transpile-only src/main.ts",
        "start:staging": "cross-env NODE_ENV=staging node dist/main",
        "start:production": "cross-env NODE_ENV=production node dist/main",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^8.2.5",
        "@nestjs/config": "^1.1.6",
        "@nestjs/core": "^8.2.5",
        "@nestjs/event-emitter": "^1.0.0",
        "@nestjs/mongoose": "^9.0.2",
        "@nestjs/platform-express": "^8.2.5",
        "@nestjs/swagger": "^5.1.5",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "compression": "^1.7.4",
        "cross-env": "^7.0.3",
        "gm": "^1.23.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.1.6",
        "multer": "^1.4.4",
        "nestjs-redis": "file:src/package/custom-modules/nestjs-redis",
        "nodemailer": "^6.7.2",
        "redis": "^4.0.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.2",
        "swagger-ui-express": "^4.3.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.2.0",
        "@nestjs/schematics": "^8.0.5",
        "@nestjs/testing": "^8.2.5",
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.13",
        "@types/gm": "^1.18.11",
        "@types/jest": "^27.4.0",
        "@types/multer": "^1.4.7",
        "@types/node": "16.11.7",
        "@types/nodemailer": "^6.4.4",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.4.7",
        "prettier": "^2.5.1",
        "supertest": "^6.2.1",
        "ts-jest": "^27.1.3",
        "ts-loader": "^9.2.6",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.5.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "engines": {
        "npm": "please-use-yarn",
        "yarn": ">= 1.21.10"
    }
}
